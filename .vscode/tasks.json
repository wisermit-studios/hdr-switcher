{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run SystemManager",
            "type": "shell",
            "command": "dotnet run",
            "options": {
                "cwd": "${workspaceFolder}/dotnet/systemManager/src/"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build SystemManager",
            "type": "dotnet",
            "task": "build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Publish SystemManager Debug",
            "type": "shell",
            "command": "./gradlew :dotnet:systemManager:publishDebugExe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Publish SystemManager Release",
            "type": "shell",
            "command": "./gradlew :dotnet:systemManager:publishReleaseExe",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run App",
            "type": "shell",
            "command": "./gradlew run",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Package Release MSI",
            "type": "shell",
            "command": "./gradlew :composeApp:packageReleaseMsi",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}